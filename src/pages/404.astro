---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Page Not Found - Casa Patron";
const description = "The page you're looking for doesn't exist. Return to Casa Patron to explore our vacation rental in Alto, NM.";
---

<BaseLayout title={title} description={description} noIndex={true}>
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <h1 class="text-8xl md:text-9xl font-bold text-primary mb-4">404</h1>
    <h2 class="text-2xl md:text-3xl font-bold text-secondary mb-4">
      Looks like you've wandered off the trail
    </h2>
    <p class="text-gray-600 text-lg mb-8 max-w-md">
      The page you're looking for doesn't exist or has been moved. Let's get you back to exploring Casa Patron.
    </p>

    <div class="flex flex-col sm:flex-row gap-4">
      <a
        href="/"
        class="bg-secondary hover:bg-tertiary text-white font-semibold px-8 py-3 rounded-full transition-colors shadow-md"
      >
        Back to Home
      </a>
      <a
        href="/contact-us/"
        class="border-2 border-secondary text-secondary hover:bg-secondary hover:text-white font-semibold px-8 py-3 rounded-full transition-colors"
      >
        Contact Us
      </a>
    </div>

    <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-6 max-w-2xl">
      <a href="/activities/" class="p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors">
        <h3 class="font-bold text-grey-neutral mb-1">Activities</h3>
        <p class="text-sm text-gray-600">Explore local attractions</p>
      </a>
      <a href="/posts/" class="p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors">
        <h3 class="font-bold text-grey-neutral mb-1">Blog</h3>
        <p class="text-sm text-gray-600">Travel tips & guides</p>
      </a>
      <a href="/contact-us/" class="p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors">
        <h3 class="font-bold text-grey-neutral mb-1">Book Now</h3>
        <p class="text-sm text-gray-600">Plan your getaway</p>
      </a>
    </div>
  </div>
</BaseLayout>
