---
import BaseLayout from "../layouts/BaseLayout.astro";
import LocalAttractions from "../components/react/LocalAttractions.jsx";
import { localAttractions } from "../content/local-attractions/local-attractions.js";

const title = "Local Activities & Attractions in Alto, NM";
const description =
  "Discover amazing activities and attractions near Casa Patron in Alto, New Mexico. From Ski Apache to hiking trails, restaurants, and scenic drives - plan your perfect mountain getaway.";

const keywords = [
  "alto new mexico activities",
  "ski apache",
  "ruidoso attractions",
  "new mexico hiking",
  "mountain activities",
  "vacation activities",
  "alto nm things to do",
];

// Breadcrumbs for navigation
const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Activities", url: "/activities/" },
];

// Generate ItemList schema for attractions
const activitiesSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  name: "Local Activities & Attractions Near Casa Patron",
  description: description,
  numberOfItems: localAttractions.length,
  itemListElement: localAttractions.slice(0, 10).map((attraction, index) => ({
    "@type": "ListItem",
    position: index + 1,
    item: {
      "@type": attraction.eventInfo?.dates ? "Event" : "TouristAttraction",
      name: attraction.name,
      description: attraction.description,
      url: attraction.url,
      ...(attraction.eventInfo?.dates && { startDate: attraction.eventInfo.dates }),
    },
  })),
};
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  schemaMarkup={activitiesSchema}
  type="website"
  breadcrumbs={breadcrumbs}
>
  <!-- Hero Section -->
  <div
    class="bg-gradient-to-br from-secondary via-blue-600 to-tertiary text-white py-16 mb-12 rounded-xl"
  >
    <div class="text-center max-w-4xl mx-auto px-4">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Explore Alto & Ruidoso
      </h1>
      <p class="text-xl md:text-2xl leading-relaxed opacity-90">
        Discover world-class skiing, scenic hiking trails, amazing restaurants,
        and breathtaking mountain adventures in New Mexico's hidden gem.
      </p>
    </div>
  </div>

  <!-- Local Attractions Component -->
  <LocalAttractions client:load />
</BaseLayout>
