---
import BaseLayout from "../layouts/BaseLayout.astro";
import LocalAttractions from "../components/react/LocalAttractions.jsx";

const title = "Local Activities & Attractions in Alto, NM";
const description =
  "Discover amazing activities and attractions near Casa Patron in Alto, New Mexico. From Ski Apache to hiking trails, restaurants, and scenic drives - plan your perfect mountain getaway.";

const keywords = [
  "alto new mexico activities",
  "ski apache",
  "ruidoso attractions",
  "new mexico hiking",
  "mountain activities",
  "vacation activities",
  "alto nm things to do",
];
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  type="website"
>
  <!-- Hero Section -->
  <div
    class="bg-gradient-to-br from-secondary via-blue-600 to-tertiary text-white py-16 mb-12 rounded-xl"
  >
    <div class="text-center max-w-4xl mx-auto px-4">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Explore Alto & Ruidoso
      </h1>
      <p class="text-xl md:text-2xl leading-relaxed opacity-90">
        Discover world-class skiing, scenic hiking trails, amazing restaurants,
        and breathtaking mountain adventures in New Mexico's hidden gem.
      </p>
    </div>
  </div>

  <!-- Local Attractions Component -->
  <LocalAttractions client:load />
</BaseLayout>
