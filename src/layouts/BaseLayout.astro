---
import SEO from "../components/SEO.astro";
import Analytics from "../components/Analytics.astro";
import Header from "../components/react/Header.jsx";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  keywords?: string[];
  image?: string;
  type?: "website" | "article";
  schemaMarkup?: object;
  noIndex?: boolean;
  hasHeroContent?: boolean;
  heroImg?: any;
  mobileHeroImg?: any;
  bodyClasses?: string;
  isHomePage?: boolean;
}

const {
  title,
  description = "Casa Patron vacation rental in Alto, NM near Ruidoso & Ski Apache",
  keywords = [],
  image,
  type = "website",
  schemaMarkup,
  noIndex = false,
  hasHeroContent,
  heroImg,
  mobileHeroImg,
  bodyClasses = "",
  isHomePage = false,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon configuration -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Mobile optimization -->
    <meta name="apple-mobile-web-app-title" content="Casa Patron" />
    <meta name="application-name" content="Casa Patron" />

    <SEO
      title={title}
      description={description}
      keywords={keywords}
      image={image}
      type={type}
      schemaMarkup={schemaMarkup}
      noIndex={noIndex}
    />

    <!-- Preload critical fonts if needed -->
    <!-- <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin /> -->

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://www.google-analytics.com" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />

    <!-- Google Analytics -->
    <Analytics />
  </head>
  <body class={bodyClasses}>
    <div class="relative overflow-hidden">
      <!-- Header with video hero and sticky navigation -->
      <Header
        hasHeroContent={hasHeroContent}
        heroImg={heroImg}
        mobileHeroImg={mobileHeroImg}
        isHomePage={isHomePage}
        client:load
      />

      <!-- Main content - add top padding to account for sticky nav -->
      <main
        class={isHomePage
          ? "max-w-7xl mx-auto px-4 sm:px-6 z-20 relative min-h-[85vh]"
          : "pt-16 max-w-7xl mx-auto px-4 sm:px-6 z-20 relative min-h-[85vh]"}
      >
        <slot />
      </main>

      <!-- Footer component will go here -->
      <footer class="bg-grey-neutral text-white p-8 mt-12">
        <div class="max-w-7xl mx-auto text-center">
          <p>
            &copy; {new Date().getFullYear()} Casa Patron. All rights reserved.
          </p>
          <p class="text-primary">
            Alto, New Mexico â€¢ Near Ruidoso & Ski Apache
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
